<div class="container">
    <div class="text-center">
        <h1>Create snippet</h1>
        <div>
            <form class="form-group" action="/create" method="post">
                {{>validationErrors}}
                <label>Name your snippet:</label>
                <input type='text' class="snippet-name" name="name" value="{{snippetName}}" />
                <br>
                <textarea class="form-textarea" name="snippet" value="{{theSnippet}}"></textarea>
                <br>
                <button type="submit" class="btn btn-warning btn-lg">Save</button>
            </form>
        </div>
    </div>
</div>
